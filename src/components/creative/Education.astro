---
import { $userSelected } from "@store/store";
import TitleSection from "@components/creative/TitleSection.astro";

interface Props {
  position: "left" | "right";
}
const { position } = Astro.props;

const { education } = $userSelected.value!;
---

<article class="flex flex-col gap-1 text-[var(--text)]">
  <TitleSection title="educaciÃ³n" position={position} />
  <ul class="flex flex-col gap-5">
    {
      education.map(({ area, institution, startDate, endDate }) => {
        const startYear = new Date(startDate).getFullYear();
        const endYear = new Date(endDate).getFullYear();
        return (
          <li class="flex flex-col gap-1">
            <p class="font-semibold m-0 text-sm text-[var(--title)]">{area}</p>
            <p class="text-[var(--text)] text-xs">{institution}</p>
            <p class="text-[var(--text)] text-xs">
              {startYear}-{endYear}
            </p>
          </li>
        );
      })
    }
  </ul>
</article>
